<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="15dp" android:color="#FAC495" />
            <corners android:radius="15dp" />
            <solid android:color="#FAC495" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:bottom="10dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="5dp" android:color="#F8AD6B" />
            <corners android:radius="15dp" />
            <solid android:color="#F8AD6B" />
        </shape>
    </item>

</layer-list>